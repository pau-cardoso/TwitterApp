<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#15212b"
    android:paddingVertical="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="~Paulina~" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:linksClickable="true"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="This is my tweet" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvName"
        android:textColor="#8899a6"
        android:textSize="14sp"
        tools:text="@pau_cardoso" />

    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/tvScreenName"
        android:textColor="#8899a6"
        android:textSize="14sp"
        tools:text="3 seconds ago" />

    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ibtnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:background="#00FFFFFF"
        android:tint="@drawable/ibtn_retweet"
        app:srcCompat="@drawable/ic_vector_reply" />

    <ImageButton
        android:id="@+id/ibtnRetweet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ibtnReply"
        android:background="#00FFFFFF"
        android:tint="@drawable/ibtn_retweet"
        app:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <Button
        android:id="@+id/ibtnLike2"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ibtnRetweet2"
        android:background="@drawable/ibtn_like"
        android:textColor="@color/twitter_gray"
        android:tint="@color/inline_action_like" />

</RelativeLayout>